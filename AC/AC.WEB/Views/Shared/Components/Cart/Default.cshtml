@model AC.ViewModels.Cart.ProductCartViewModel

<div class="modal fade" id="ModalCart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title" id="exampleModalLabel">Корзина</span>
                <span class="sum-price">@Model.Count товар(a) на сумму: @Model.Price ₽</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @foreach (var product in Model.Products)
                {
                    <div class="product-wrap">
                        <img class="cart-src" src="~/images/products/@product.Image">
                        <p class="item-name-cart">@product.Name</p>
                        <p class="item-price-cart"><strong>@product.Price</strong></p>
                        <span class="number-of-items">Кол-во: <b>@product.Count</b></span>
                        <span class="choosen-item-size">Размер: <b>@product.Size</b></span>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <a type="button" class="btn btn-primary" asp-area="" asp-controller="Cart" asp-action="Index">Оформить заказ</a>
            </div>
        </div>
    </div>
</div>